<mvc:View controllerName="zprap.zfprap.controller.FilterSelectionPRAP"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
    <Page id="idSelectionPage" title="{i18n>title}">
        <content>
        <VBox class="sapUiSmallMargin">
            <f:SimpleForm
                editable="false"
                layout="ResponsiveGridLayout"
                singleContainerFullSize="false" >
                <f:content>
                    <Label text="{i18n>material}" />
                    <Input required="true" showValueHelp="true" valueHelpRequest="onInputMaterialsValueHelpRequest"
                        id="idMaterialInput" customData:dialogName="MaterialValueHelpDialog"
                        customData:FilterProperty="{prop1: 'WERKS', prop2: ''}">
                    </Input>
                    <Label text="{i18n>purchaseReqNo}" />
                    <Input required="true" id="idPurchaseReqNoInput"
                        showValueHelp="true" valueHelpRequest="onInputMaterialsValueHelpRequest"
                        customData:dialogName="PRNOValueHelpDialog"
                        customData:FilterProperty="{prop1: 'BANFN', prop2: 'BNFPO'}"/>
                    <Label text="{i18n>plant}" />
                    <Input required="true" id="idPlantInput"
                        showValueHelp="true" valueHelpRequest="onInputMaterialsValueHelpRequest"
                        customData:dialogName="PlantValueHelpDialog"
                        customData:FilterProperty="{prop1: 'WERKS', prop2: 'NAME1'}"/>
                    <Label text="{i18n>releaseCode}" />
                    <Input required="true" id="idReleaseCodeInput"
                        showValueHelp="true" valueHelpRequest="onInputMaterialsValueHelpRequest"
                        customData:dialogName="ReleaseCodeValueHelpDialog"
                        customData:FilterProperty="{prop1: 'FRGCO', prop2: 'FRGCT'}"/>
                    <Label text="{i18n>documentType}" required="true"/>
                    <ComboBox items="{path: '/ZDOC_TYPE_SRCHSet'}" showSecondaryValues= "true">
                        <core:ListItem key="{BSART}" text="{BATXT}" additionalText = "{BSART}"/>
                    </ComboBox>
                </f:content>
            </f:SimpleForm>
	    </VBox>
        </content>
        <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Emphasized" text="Search" press="onSearchButtonNavToListPress"/>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
