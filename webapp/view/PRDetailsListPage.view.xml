<mvc:View controllerName="zprap.zfprap.controller.PRDetailsListPage"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="idPRDetailsPage" title="{i18n>title}">
        <content>
            <Table id="idPRDetailsListTable"
                items="{path: 'localModel>/LineDetails'}"
                sticky="ColumnHeaders,HeaderToolbar" growing="true" growingThreshold="1000">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="{i18n>prDetails}({localModel>/lineTableCount})" level="H2"/>
                            <ToolbarSpacer />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>materials}" />
                    </Column>
                    <Column	minScreenWidth="Phone">
                        <Text text="{i18n>prNo}" />
                    </Column>
                    <Column minScreenWidth="Phone">
                        <Text text="{i18n>approvedQty}" />
                    </Column>
                    <Column	minScreenWidth="Phone">
                        <Text text="{i18n>supplyPlant}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{localModel>MATNR}" />
                            <Text text="{localModel>BANFN}" />
                            <Input value="{localModel>A_MENGE}"/>
                            <Input value="{localModel>RESWK}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Emphasized" text="{i18n>back}" 
                    press="onBackButtonNavToPRListPagePress"/>
				<Button type="Success" text="{i18n>approve}"/>
				<Button type="Negative" text="{i18n>reject}"/>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
