<mvc:View controllerName="zprap.zfprap.controller.PRListPage"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="idListPage" title="{i18n>title}">
        <content>
            <Table id="idPRListTable" mode="MultiSelect"
                multiSelectMode="ClearAll"
                items="{path: 'localModel>/HeadDetails'}"
                sticky="ColumnHeaders,HeaderToolbar" growing="true" growingThreshold="1000"
                selectionChange="onSelectPRList" updateFinished="updateFinishedTable" > 
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="{i18n>prDetails}({localModel>/headTableCount})" level="H2"/>
                            <ToolbarSpacer />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="{i18n>materials}" />
                    </Column>
                    <Column	minScreenWidth="Phone">
                        <Text text="{i18n>prNo}" />
                    </Column>
                    <Column minScreenWidth="Phone">
                        <Text text="{i18n>approvedQty}" />
                    </Column>
                    <Column	minScreenWidth="Phone">
                        <Text text="{i18n>supplyPlant}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle" id="idColumnListItem">
                        <cells>
                            <Text text="{localModel>MATNR}" />
                            <Text text="{localModel>BANFN}" />
                            <Input value="{localModel>A_MENGE}"/>
                            <Input value="{localModel>RESWK}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Emphasized" text="{i18n>details}" 
                     enabled="{localModel>/enableListPRActions}"
                     press="onDetailsButtonNavToPRdetailsPagePress"/>
				<Button type="Success" text="{i18n>approve}" enabled="{localModel>/enableListPRActions}"
                    press="onPressApproveHead"/>
				<Button type="Negative" text="{i18n>reject}" enabled="{localModel>/enableListPRActions}"/>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
